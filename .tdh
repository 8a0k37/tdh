#!/bin/bash


funtion watch_ctrl_c
{
  read -p "\033[0;1mDo you want to exit? " answer
  if [[ "$answer" == "y" ]]; then
    exit 1
  fi
}

trap watch_ctrl_c SIGINT

source=tdh.conf

username="$usernamec"
servername="$servernamec"

while true; do
  currentpath=$PWD
  read -p "\033[0;51m${username}\033[0;247m@\033[0;214m${servername}\033[0;247m:\033[0;248m${currentpath}\033[0;11m$ " command
  if [[ "$command" == "exit"* ]]; then
    pkill -u $username
  fi
  $command
done

trap - SIGINT
